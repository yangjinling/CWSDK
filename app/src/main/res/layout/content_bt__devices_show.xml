<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_bt__devices_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cwbj.cwsdk2.activity.BT_DevicesShow"
    tools:showIn="@layout/activity_bt__devices_show">
<TextView
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:layout_marginLeft="30dp"
    android:textColor="@android:color/black"
    android:text="搜索到的蓝牙设备"/>
    <ListView
        android:id="@+id/listViewa"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:divider="#0dc3ff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:dividerHeight="1dp"
        android:background="@drawable/listview_back"
        android:scrollbars="none"></ListView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"/>

</LinearLayout>
